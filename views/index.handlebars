<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Movie Scrape</h1>
    <p class="lead">The Scraper of Movies.</p>
  </div>
</div>
<div class="row">
  <div id="articles-div" class="col-10 mx-auto bg-light p-3">

    {{#each article}}
      <div class="movie-div bg-white p-2 mb-2">
          <h2>{{headline}}</h2>
          <p>{{summary}}</p>
          <p>{{url}}</p>
          <button id="comment-btn" class="btn btn-warning resend" data-id={{_id}}>comment</button>
      </div>
    {{/each }}

  </div>
</div>

<div class="row">
  <div class="col-8 mx-auto bg-light pd-3">
    <form>
      <div class="form-group">
        <label for="noteInput">Note Title</label>
        <input type="title" class="form-control" id="titleInput" aria-describedby="titleHelp" placeholder="Enter a title">
        
      </div>
      <div class="form-group">
        <label for="commentInput">Comment</label>
        <input type="text" class="form-control" id="commentInput" placeholder="Comment">
      </div>
      
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>


